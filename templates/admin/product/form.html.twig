{% extends 'base.html.twig' %}

{% block title %}ProductController!
{% endblock %}

{% block body %}
	<div class="row">
		<div class="col p-3">
			<h3>Add Product</h3>
			<p>
				<a href=" {{ url('admin.product.index' ) }} " class="btn btn-primary">Product Liste</a>
			</p>
			{# <form novalidate> en html  #}

			{{ form_start(form, { 
				attr: {  novalidate: 'novalidate'}
				})
			}}

			<p> {{ form_label(form.designation , 'Designation :') }} 
				{{ form_widget(form.designation) }} 
				{{ form_errors(form.designation) }}
			</p>
			<p> 
				{{ form_label(form.price , 'Price :') }} 
				{{ form_widget(form.price) }} 
				{{ form_errors(form.price) }}
			</p>
			<p> 
				{{ form_label(form.description , 'Description :') }} 
				{{ form_widget(form.description) }} 
				{{ form_errors(form.description) }}
			
			</p>
			<p> 
				{{ form_label(form.quantity , 'Quantity :') }} 
				{{ form_widget(form.quantity) }} 
				{{ form_errors(form.quantity) }}
			
			</p>
			<p> 
				{{ form_label(form.image , 'Image :') }} 
				{{ form_widget(form.image) }} 
				{{ form_errors(form.image) }}
			
			</p>
			<p> 
				<input type="submit" class="btn btn-primary">
			</p>
			
			{{ form_end(form) }}
		</div>
	</div>


{% endblock %}
